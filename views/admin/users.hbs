{{#if users}}
<main id="main" class="main">
      <div class="pagetitle">
        <h1>Users</h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
            <li class="breadcrumb-item active">Users</li>
          </ol>
        </nav>
      </div>
      <!-- End Page Title -->
      <main>
        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <thead>
                          <tr>
                            
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                         {{#each users}}
                              <tr>
                                <td>{{username}}</td>
                                <td>{{email}}</td>
                                <td>{{type}}</td>
                              </tr>
                         {{/each}}
                        
                        </tbody>
                      </table>
                </div>
            </div>
      </section>
    </main>

{{else}}
  <p style="margin-top: 120px; margin-left: 600px;">No users currently</p>
{{/if}}


<!-- End #main -->