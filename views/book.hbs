<main id="main" class="main">
  <div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
        <li class="breadcrumb-item active">Book</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="">
      <!-- Left side columns -->
      <div class="col-lg-12">
        <div class="column">
          <div class="col-xxl-4 col-md-6">
            <form action="/events" method="post">
              <div
                class="form-row d-flex justify-content-center align-items-center w-100"
              >
                <div class="form-group col-md-6">
                  <label for="inputState">Event Type</label>
                  <select
                    id="inputState"
                    class="form-control"
                    name="event"
                    required
                  >
                    <option selected>Choose</option>
                    <option>Birthdays</option>
                    <option>Weddings</option>
                    <option>Conferences</option>
                    <option>Baby shower</option>
                    <option>Other</option>
                  </select>
                </div>
                <div class="form-group col-md-6">
                  <label for="inputPassword4">Venue</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputPassword4"
                    placeholder="Venue"
                    name="venue"
                    required
                  />
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-6">
                  <label for="inputAddress">Starting time</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputAddress"
                    placeholder="From"
                    name="starttime"
                    required
                  />
                </div>
                <div class="form-group col-md-6">
                  <label for="inputAddress">Ending time</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputAddress"
                    placeholder="To"
                    name="end"
                    required
                  />
                </div>
                <div class="form-group col-md-6">
                  <label class="mr-sm-2" for="inlineFormCustomSelect">Number of
                    Guests</label>
                  <select
                    name="guests"
                    class="custom-select mr-sm-2"
                    id="inlineFormCustomSelect"
                    required
                  >
                    <option selected>Choose...</option>
                    <option value="1">less than 100</option>
                    <option value="2">200</option>
                    <option value="3">500</option>
                    <option value="3">1000 and more</option>

                  </select>
                </div>
              </div>
              <div class="form-group col-md-6">
                <label for="amount">Budget Amount</label>
                <input
                  type="number"
                  name="amount"
                  placeholder="Ksh"
                  min="5000"
                />
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Other info</label>
                <textarea
                  class="form-control"
                  id="exampleFormControlTextarea1"
                  rows="3"
                  name="description"
                ></textarea>
              </div>
              <div class="form-row">

              </div>
              <div class="form-group">

              </div>
              <button type="submit" class="btn btn-primary">Book and Proceed to
                Pay</button>
              <a href="/dash/book" class="cancel" type="button">Cancel</a>
            </form>
          </div>
          <!-- End Right side columns -->
        </div>
      </div>
    </div>
  </section>
</main>