{{#if success_msg}}
  <div
    class="alert alert-success alert-dismissible fade show"
    role="alert"
  >{{success_msg}}</div>
{{/if}}

{{#if error_message}}
  <div
    class="alert alert-warning alert-dismissible fade show"
    role="alert"
  >{{error_message}}</div>
{{/if}}

{{#if error}}
  <div
    class="alert alert-warning alert-dismissible fade show"
    role="alert"
  >{{error}}</div>
{{/if}}