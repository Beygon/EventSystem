<main id="main" class="main">
  <div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
        <li class="breadcrumb-item active">Payment</li>
      </ol>
    </nav>
  </div>
  <!-- End Page Title -->

  <section class="section dashboard">
    <div class="">
      <!-- Left side columns -->
      <div class="col-lg-12">
        <div class="column">
          <div class="col-xxl-4 col-md-6">
            <form action="/payment" method="post">
              <div
                class="form-row d-flex justify-content-center align-items-center w-100"
              >
                <div class="form-group col-md-6">
                  <label for="inputAddress">Phone Number</label>
                  <input
                    type="tel"
                    class="form-control"
                    id="inputAddress"
                    placeholder="07XXXXXX"
                    name="phone"
                  />
                </div>
                <div class="form-group col-md-6 mx-3">
                  <label for="inputAddress">Amount In Ksh.</label>
                  <input
                    type="text"
                    class="form-control"
                    id="inputAddress"
                    placeholder="{{amount}}"
                    name="amount"
                  />
                </div>
              </div>

              <button type="button" class="btn btn-primary my-4">Confirm Payment</button>
              <a href="/dash/book" class="cancel my-4" type="button">Cancel</a>
            </form>
          </div>
          <!-- End Right side columns -->
        </div>
      </div>
    </div>
  </section>
</main>